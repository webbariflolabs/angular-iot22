pipeline {
    agent any
    
    environment {
    NODEJS_HOME = tool name: 'NodeJS-20.5.1', type: 'NodeJS'
    PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
}
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                 nodejs('NodeJS-20.5.1') {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }

    post {
        success {
            echo 'Build successful! Artifacts ready for deployment.'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
