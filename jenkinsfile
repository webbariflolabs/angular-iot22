pipeline {
    agent any
    
     environment {
        NODEJS_HOME = tool name: 'nodejs', type: 'NodeJS'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build and Deploy') {
            environment {
                NODEJS_HOME = tool name: 'YourNodeJSInstallationName', type: 'NodeJS'
                PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
            }
            steps {
                sh 'npm install'
                sh 'npm run build'
                // Add deployment steps here
            }
        }
    }
}