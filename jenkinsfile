pipeline {
    agent any
    
     environment {
        NODEJS_HOME = tool name: 'Nodejs', type: 'NodeJS'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }

    post {
        success {
            echo 'Build successful! Artifacts ready for deployment.'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
